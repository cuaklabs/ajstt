{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "format": {
      "inputs": ["src/**/*.ts"],
      "outputs": ["src/**/*.ts"]
    },
    "@cuaklabs/eslint-config#format": {
      "inputs": ["./**/*", "!node_modules", "!.turbo"],
      "outputs": ["./**/*", "!node_modules", "!.turbo"]
    },
    "@cuaklabs/jest-config#format": {
      "inputs": ["lib/**/*"],
      "outputs": ["lib/**/*"]
    },
    "@cuaklabs/typescript-config#format": {
      "inputs": ["./**/*", "!node_modules", "!.turbo"],
      "outputs": ["./**/*", "!node_modules", "!.turbo"]
    },
    "lint": {
      "dependsOn": ["^build"],
      "inputs": ["src/**/*.ts"]
    }
  }
}
